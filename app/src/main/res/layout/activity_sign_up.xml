<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTextIcons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@color/colorTextIcons">

        <ImageView
            android:id="@+id/image"
            android:layout_width="220dp"
            android:layout_height="241dp"
            android:layout_gravity="center"
            android:src="@drawable/trial" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:text="Welcome to LK Store"
            android:textColor="@color/colorPrimaryText"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signupeditusername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="55dp"
            android:hint="UserName"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorPrimaryText" />

        <EditText
            android:id="@+id/signupeditemail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupeditusername"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_email_24"
            android:drawablePadding="55dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimaryText" />
        <EditText
            android:id="@+id/signupeditphonenumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupeditusername"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_phone_24"
            android:drawablePadding="55dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColorHint="@color/colorPrimaryText" />


        <EditText
            android:id="@+id/signupeditpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupeditusername"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_lock_24"
            android:drawablePadding="65dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimaryText" />

        <Button
            android:id="@+id/signupbutton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:text="SIGN UP"
            android:textColor="@color/colorTextIcons"

            />

    </LinearLayout>

</LinearLayout>