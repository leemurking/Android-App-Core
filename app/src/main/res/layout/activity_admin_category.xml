<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/jones"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/jordanones"
            />
        <ImageView
            android:id="@+id/jfours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jordanfours"
            />

        <ImageView
            android:id="@+id/nike720s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nike720s"
            />

        <ImageView
            android:id="@+id/nike270s"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nike270s"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/vans"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/vans"
            />

        <ImageView
            android:id="@+id/airforceone"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/afones"
            />

        <ImageView
            android:id="@+id/cactus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cactusjs"
            />

        <ImageView
            android:id="@+id/dior"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/dioro"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/clanks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/clanks"
            />

        <ImageView
            android:id="@+id/dripoffice"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/dripoffice"
            />

        <ImageView
            android:id="@+id/snake"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/snakeskin"
            />

        <ImageView
            android:id="@+id/gucci"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/guccionmy"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="Check New Orders"
        android:textColor="@color/colorPrimaryText"
        android:textSize="25dp"
        android:background="@drawable/search_bg"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/search_bg"
        android:text="Logout"
        android:textColor="@color/colorPrimaryText"
        android:textSize="25dp"
        android:textAllCaps="false"
        />

</RelativeLayout>